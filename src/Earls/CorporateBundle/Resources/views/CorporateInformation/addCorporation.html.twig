        </div>
        
        
         <!-- ********** MEMBERSHIPS TABLE *********** -->

        <div class="col-md-12">
            <div class="box border orange">
                <div class="box-title">
                    <h4>Membership</h4>
                </div>
                
                <div class="box-body big">
                    <div class="form-group">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-lg-6">
                                    <label>Share Type</label>
                                </div>
                                <div class="col-lg-2">
